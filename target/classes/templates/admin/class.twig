<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Admin Homepage</title>
        <link rel="stylesheet" href="../../static/css/admin_styles.css">
        <link rel="stylesheet" href="../../static/css/styles.css">
        <link rel="stylesheet" href="../../static/css/user_styles.css">
        
        <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
    </head>

    <body>
    <div class="content">
        <header>
            <div id="user">
                <a href="admin"><img src="../../static/img/admin.png" alt="avatar" ></a>
            </div>

            <div class="info">
                <div class="info-center">
                    <h1>Hello {{userName}}</h1>
                </div>
                <div class="info-top">
                    <a href="login"><img src="../../static/img/out.png" alt="logout" title="Log out"></a>
                </div>
            </div>
        </header>

        <div class="bar-content-block">
            <div class="bar">
                <ul class="menu">
                    <li class="menu-item"><a href="/admin">Mentors</a></li>
                    <li class="menu-item"><a href="/class" class="selected">Classes</a></li>
                    <li class="menu-item"><a href="/level">Levels</a></li>
                </ul>
            </div>

            <div class="content-block">
                <h1>Classes</h1>
                <table class="show-mentors">
                    <thead>
                        <tr>
                            <th>Lp</th>
                            <th>Class</th>
                            <th></th>
                            <th>Mentors</th>

                        </tr>
                    </thead>

                    <tbody>
                        {%set lp = 0 %}
                        {% for key, value in classMentorMap %}
                            <tr>
                                {%set lp = lp + 1 %}
                                <td rowspan={{classMentorMap.size()}}>{{lp}}</td>
                                <td rowspan={{classMentorMap.size()}}>{{key}}</td>
                                <td rowspan={{classMentorMap.size()}}><a href="class_edit/{{class.getClassId}}">Edit</a></td>

                                {% for name in value%}

                                    <td>{{name}}</td>
                                    </tr><tr>

                                {% endfor %}

                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <form>
                    <input class="add-class-button" onclick="window.location.href='addNewClass.html'" type="button" value="Add">

                </form>
            </div>
        </div>
    </div>

    <footer>
        <a href='https://www.freepik.com/free-vector/assorted-user-avatars-collection_851876.htm'>Designed by Freepik</a>
        <p>MADD crew Production</p>
    </footer>
    </body>
</html>
